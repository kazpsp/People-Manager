<div class="row">
	<div class="col-md-4">
		<%= profile_pic @person %>
	</div>
	<div class="col-md-8">
		<p>
			<strong>First name:</strong>
			<%= @person.first_name %>
		</p>

		<p>
			<strong>Last name:</strong>
			<%= @person.last_name %>
		</p>

		<p>
			<strong>Email:</strong>
			<%= @person.email %>
		</p>

		<p>
			<strong>Job:</strong>
			<%= @person.job %>
		</p>

		<p>
			<strong>Bio:</strong>
			<%= @person.bio %>
		</p>

		<p>
			<strong>Gender:</strong>
			<%= @person.gender %>
		</p>

		<p>
			<strong>Birthdate:</strong>
			<%= @person.birthdate %>
		</p>
		<%= link_to 'Edit', edit_person_path(@person), class: "btn btn-primary" %> 
		<%= link_to 'Cancel', people_path, class: "btn btn-info" %>
		<%= link_to 'Delete', @person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %> 
	</div>
</div>


